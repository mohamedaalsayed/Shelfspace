generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @default(autoincrement()) @id
  email       String  @unique
  name        String
  password    String
  items       Item[]
  collections Collection[]
}

model Item {
  id          String  @id @unique @default(cuid())
  user        User    @relation(fields: [userId], references: [id])
  userId      Int
  title       String
  sourceUrl   String?
  fileUrl     String?
  itemType    String
  status      String
  progress    Int
  addedAt    DateTime
  collections Collection[]
  notes       Note[]
  hightlights Highlight[]
}

model Collection {
  id          String  @id @unique @default(cuid())
  user        User    @relation(fields: [userId], references: [id])
  userId      Int
  item        Item      @relation(fields: [itemId], references: [id])
  itemId      String
  name        String
  description String
}

model Note {
  id          String    @id @unique @default(cuid())
  item        Item      @relation(fields: [itemId], references: [id])
  itemId      String
  highlight   Highlight @relation(fields: [highlightId], references: [id])
  highlightId String
}

model Highlight {
  id      String  @id @unique @default(cuid())
  item    Item    @relation(fields: [itemId], references: [id])
  itemId  String
  notes   Note[]
}